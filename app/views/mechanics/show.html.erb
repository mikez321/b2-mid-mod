<h2>Mechanic: <%= @mechanic.name %></h2>
<p>Years of Experience: <%= @mechanic.experience %></p>
<section class="mechanic-info">
  <p>Current rides they're working on:</p>
  <ul>
    <% @mechanic.rides.each do |ride| %>
      <p><%= ride.name %></p>
    <% end %>
  </ul>
</section>
<section>
  <p>Add a ride to workload:</p>
  <%= form_tag "/mechanics/#{@mechanic.id}/rides", method: :patch do %>
  <%= label_tag "Enter a ride ID to add:" %>
  <%= text_field_tag "ride_id" %>
  <%= submit_tag "Add Ride" %>
  <% end %>
</section>
<section class="available-rides">
  <p>These rides need work</p>
  <% @mechanic.all_rides.each do |ride| %>
    <p><%= ride.name %>, ID: <%= ride.id %></p>
  <% end %>
</section>
